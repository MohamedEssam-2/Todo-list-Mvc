@model Business_Logic_Layer.DTO.TodoDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Todo Details</h2>

<hr />

<dl class="row">
    <dt class="col-sm-3">Title</dt>
    <dd class="col-sm-9">@Model.Title</dd>

    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">
        @(string.IsNullOrWhiteSpace(Model.Description) ? "No Description" : Model.Description)
    </dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Priority</dt>
    <dd class="col-sm-9">@Model.Priority</dd>

    <dt class="col-sm-3">Due Date</dt>
    <dd class="col-sm-9">
        @(Model.DueDate.HasValue ? Model.DueDate.Value.ToString("dd/MM/yyyy") : "No Due Date")
    </dd>

    <dt class="col-sm-3">Created Date</dt>
    <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

    <dt class="col-sm-3">Last Modified</dt>
    <dd class="col-sm-9">@Model.LastModifiedDate.ToString("dd/MM/yyyy HH:mm")</dd>
</dl>

<hr />

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
